#include "main.h"
#include <stdlib.h>
/**
 **create_array - a function that creates an array of chars, and initializes it with a specific char.
 *@size: - the size of the char
 *@c: - the char to make the string
 *Return: a char
 */

char *create_array(unsigned int size, char c)
{
unsigned int i;
char *s;
if (size == 0)
{
return ("NULL");
}
s = malloc(sizeof(c) * size);
if (s == NULL)
{
return ("NULL");
}
else
{
for (i = 0; i < size; i++)
{
s[i] == c;
}
return (s);
}
return (s);
}
